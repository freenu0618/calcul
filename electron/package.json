{
    "name": "salary-calculator",
    "version": "1.0.0",
    "description": "한국 급여 계산기 - 실수령액 계산",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win"
    },
    "author": "Salary Calculator Team",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.salarycalculator.app",
        "productName": "SalaryCalculator",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js"
        ],
        "extraResources": [
            {
                "from": "../backend/dist/backend_server.exe",
                "to": "backend_server.exe"
            },
            {
                "from": "../frontend/dist",
                "to": "frontend"
            }
        ],
        "win": {
            "target": "portable"
        }
    }
}